<div class="col-md-auto text-center">
  <h2><%= @categories.name%></h2>

  <%= form_with scope: :category, url: category_path(@categories), method: :patch, local: true do |form| %>
    <p>
      <%= form.label :name %><br>
      <%= form.text_field :name %><br>
    </p>
    <p>
      <%= form.submit "Rename", class: "btn btn-sm btn-info" %>
    </p>
  <% end %>
  </div>
